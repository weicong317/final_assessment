<div class="text-center">
  <%= form_with scope: :sign_in, url: sessions_path, local: true, class: "form-signin" do |form| %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <p>
      <%= form.label :email, "Email address", class: "sr-only" %>
      <%= form.text_field :email, class: "form-control", placeholder: "Email address" %>
    </p>
    <p>
      <%= form.label :password, class: "sr-only" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </p>
    <p>
      <%= link_to "Sign in with Google", "/auth/google_oauth2", class: "text-primary" %>
    </p>
    <p>
      <%= form.submit "Sign In", class:"btn btn-lg btn-primary btn-block" %>
    </p>
  <% end %>
</div>