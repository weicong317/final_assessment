<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div id="quoteBlock" class="mt-3">
        <h4 id="quote"></h4>
        <p id="author"></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <% @messages.each do |message| %>
        <h4>Post <%= message.id%> <small>Posted on <%= message.created_at.strftime("%Y-%m-%d") %></small></h4>
        <p><%= truncate(message.message, length: 200, separator: ' '){ link_to "Continue", message_path(message.id) } %></p>
        <p></p>
      <% end %>
    </div>
  </div>

</div>

<%= will_paginate @messages, class: "apple_pagination" %>